{
  "manifest_version": 3,
  "name": "Jira Link Formatter",
  "version": "3.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "jira-link-formatter@areview.at",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
      "required": ["none"]
      }
    }
  },
  "icons": {
    "16": "icons/link_formatter_16_16.png",
    "32": "icons/link_formatter_32_32.png",
    "48": "icons/link_formatter_48_48.png",
    "128": "icons/link_formatter_128_128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/link_formatter_16_16.png",
      "32": "icons/link_formatter_32_32.png"
    }
  },
  "permissions": [
    "activeTab", 
    "storage", 
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": ["background.js"]
  },
 "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "copy-jira-link": {
      "suggested_key": { "default": "Shift+Alt+W", "mac": "Command+Shift+X" },
      "description": "Copy with default profile"
    }
  }

}
